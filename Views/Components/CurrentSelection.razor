<MudCard Class="ma-4">
  <MudCardContent>
    <strong>Your current selection:</strong>
    <MudList>
      @foreach (var item in Choices)
      {
        <MudListItem Class="pa-0" Text="@item"/>
      }
    </MudList>
  </MudCardContent>
</MudCard>

@code {

    private List<string> Choices { get; set; } = new();

    [Inject]
    protected StorageService StorageService { get; set; }

    [Inject]
    protected UserService UserService { get; set; }

    protected override async Task OnInitializedAsync()
    {
      UserService.OnLocalChoiceChanged -= OnLocalChoiceChangedAsync;
      UserService.OnLocalChoiceChanged += OnLocalChoiceChangedAsync;
      Choices = await UserService.GetChoicesAsync();
    }

    public async Task OnLocalChoiceChangedAsync()
    {
      Choices = await UserService.GetChoicesAsync();
      await InvokeAsync(StateHasChanged);
    }
}
